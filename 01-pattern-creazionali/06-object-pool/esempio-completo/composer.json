{
    "name": "laravel/connection-pool-system",
    "description": "Sistema completo di gestione connessioni database usando l'Object Pool Pattern",
    "type": "project",
    "keywords": ["laravel", "pool", "database", "connection", "pattern"],
    "license": "MIT",
    "require": {
        "php": "^8.1",
        "laravel/framework": "^10.0",
        "pestphp/pest": "^2.0"
    },
    "require-dev": {
        "pestphp/pest-plugin-laravel": "^2.0"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "pest",
        "test-coverage": "pest --coverage"
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}