# AI Gateway Configuration

# Default provider (openai, claude, gemini)
AI_DEFAULT_PROVIDER=openai

# Fallback strategy (priority, cost, performance)
AI_FALLBACK_STRATEGY=priority

# Timeout in seconds
AI_TIMEOUT=30

# Retry attempts
AI_RETRY_ATTEMPTS=3

# OpenAI Configuration
OPENAI_ENABLED=true
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4
OPENAI_MAX_TOKENS=2000
OPENAI_TEMPERATURE=0.7
OPENAI_RPM=60
OPENAI_TPM=150000
OPENAI_RPD=10000

# Claude Configuration
CLAUDE_ENABLED=true
ANTHROPIC_API_KEY=your_anthropic_api_key_here
CLAUDE_MODEL=claude-3-sonnet-20240229
CLAUDE_MAX_TOKENS=2000
CLAUDE_TEMPERATURE=0.7
CLAUDE_RPM=50
CLAUDE_TPM=100000
CLAUDE_RPD=5000

# Gemini Configuration
GEMINI_ENABLED=true
GOOGLE_AI_API_KEY=your_google_ai_api_key_here
GEMINI_MODEL=gemini-pro
GEMINI_MAX_TOKENS=2000
GEMINI_TEMPERATURE=0.7
GEMINI_RPM=60
GEMINI_TPM=120000
GEMINI_RPD=15000

# Cache Configuration
AI_CACHE_ENABLED=true
AI_CACHE_DRIVER=redis
AI_CACHE_TTL=3600
AI_CACHE_MAX_SIZE=100MB

# Monitoring Configuration
AI_MONITORING_ENABLED=true
AI_LOG_REQUESTS=true
AI_LOG_RESPONSES=false
AI_SAVE_TO_DATABASE=true
AI_ALERT_ON_FAILURE=true

# Health Check Configuration
AI_HEALTH_CHECK_ENABLED=true
AI_HEALTH_CHECK_INTERVAL=300
AI_HEALTH_CHECK_TIMEOUT=10

# Fallback Configuration
AI_FALLBACK_ENABLED=true
AI_FALLBACK_MAX_ATTEMPTS=3
AI_FALLBACK_BACKOFF_MULTIPLIER=2
AI_FALLBACK_MAX_BACKOFF=60

# Security Configuration
AI_ENCRYPT_RESPONSES=false
AI_MASK_SENSITIVE_DATA=true
AI_ALLOWED_IPS=
AI_RATE_LIMIT_BY_IP=true
