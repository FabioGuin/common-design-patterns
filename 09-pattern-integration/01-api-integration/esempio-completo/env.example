APP_NAME="API Integration Example"
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=http://localhost

# External API Configuration
PAYMENT_API_URL=https://api.payment-provider.com
PAYMENT_API_KEY=your_payment_api_key_here
PAYMENT_API_SECRET=your_payment_secret_here

NOTIFICATION_API_URL=https://api.notification-service.com
NOTIFICATION_API_KEY=your_notification_api_key_here

# API Integration Settings
API_TIMEOUT=30
API_RETRY_ATTEMPTS=3
API_RETRY_DELAY=1000

# Webhook Configuration
WEBHOOK_SECRET=your_webhook_secret_here
WEBHOOK_TIMEOUT=10

# Database Configuration
DB_CONNECTION=sqlite
DB_DATABASE=database/database.sqlite

# Queue Configuration
QUEUE_CONNECTION=database

# Cache Configuration
CACHE_STORE=file
